  <h2><%= @cocktail.name %></h2>
  <p><em><strong>Ingredients : </strong></em>
  <ul>
    <% @doses.each do |dose| %>
      <li><em><%= dose.ingredient.name %> : <%= dose.description %> -----
      <%= link_to "delete this ingredient" , dose_path(dose), method: :delete %></em></li>
    <% end %>
  </ul>
  <% @cocktail.photos.each do |photo| %>
    <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  <p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail)  %></p>
  <p><%= link_to "Back to list", cocktails_path  %></p>

